# See https://editorconfig.org/
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8

[*.sh]
indent_style = space
indent_size = 4

[meson.build]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 2
